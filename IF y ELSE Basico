Numero1 = float(input("Introduce un número: ") )
Numero2 = float(input("Introduce otro número: ") )
opcion = 0
           
print("¿Qué quieres hacer? \n1) Sumar los dos números\n2) Restar los dos números\n3) Multiplicar los dos números")
opcion = int(input("Introduce un número: ") )     

if opcion == 1:
    print("La suma de",Numero1,"+",Numero2,"es",Numero1+Numero2)
elif opcion == 2:
    print("La resta de",Numero1,"-",Numero2,"es",Numero1-Numero2)
elif opcion == 3:
    print("El producto de",Numero1,"*",Numero2,"es",Numero1*Numero2)
else:
    print("Opción incorrecta")
